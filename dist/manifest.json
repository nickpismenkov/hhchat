{
  "manifest_version": 2,
  "name": "Haha Chat",
  "version": "3.1.3",
  "description": "Читайте отзывы о работодателях, вакансиях, сотрудниках в одном месте.",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "author": "GT4U.RU",
  "permissions": [
    "*://hh.ru/*",
    "*://*.hh.ru/*",
    "*://hh.ua/*",
    "*://*.hh.ua/*",
    "*://hh.kz/*",
    "*://*.hh.kz/*",
    "*://*.avito.ru/*",
    "*://avito.ru/*",
    "*://rabota.ru/*",
    "*://*.rabota.ru/*",
    "*://superjob.ru/*",
    "*://*.superjob.ru/*",

    "http://hh-server.localhost/*",
    "https://hahachat.chrgbck.ru/*",

    "declarativeContent",
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "identity"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "64": "images/64.png",
      "128": "images/128.png"
      }
  },
  "web_accessible_resources": [
    "*"
  ],

  "content_security_policy": "default-src https://hahachat.chrgbck.ru/ 'self'"
}